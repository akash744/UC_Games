<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="24dp"
    android:elevation="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="160dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_card_image_main"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:transitionName="image"
            app:srcCompat="@drawable/temp_item_image" />

        <TextView
            android:id="@+id/text_view_game_title_main"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Red Dead Redemption 2"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/ic_mdi_star_rate"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/rating_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/opensans_regular"
                android:text="4.7"
                android:textColor="#B8C0C9"
                android:textSize="12sp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/text_view_price_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="$100.00"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>